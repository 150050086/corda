<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd"
                   logicalFilePath="migration/node-services.changelog-init.xml">

    <changeSet author="R3.Corda" id="add-manual-migration-check-table">
        <createTable tableName="node_migration_checks">
            <column name="version" type="NVARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="manual_migrations_done" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="node_migration_checks" columnNames="version" constraintName="node_migration_checks_pkey"/>
        <insert tableName="node_migration_checks">
            <column name="version">4.0</column>
            <column name="manual_migrations_done">false</column>
        </insert>
    </changeSet>
</databaseChangeLog>